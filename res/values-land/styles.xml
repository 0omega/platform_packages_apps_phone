<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- OTA Call Card styles -->
    <style name="ccOtaLayouts">
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ccOtaActivateButton">
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">200dip</item>
    </style>

    <style name="ccOtaCancelButton">
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_width">200dip</item>
    </style>

    <style name="ccOtaDialVisible">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ccOtaSpeakerButton">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">200dip</item>
    </style>

    <style name="ccOtaEndButton">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_width">200dip</item>
    </style>

    <style name="ccOtaActivateDialogOkButton">
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">310dip</item>
    </style>
    <!-- End OTA Call Card styles -->
</resources>
