<resources>
    <!-- Dimensions for CallCard elements (the normal in-call UI) -->

    <!-- Height of the "call banner" overlay on top of the upper part of
         the call info area. -->
    <dimen name="call_banner_height">80dp</dimen>

    <!-- Top margin for the "upper buttons" like Hold / Swap / Merge
         that are shown just above the main in-call button cluster. -->
    <dimen name="upper_buttons_top_margin">280dp</dimen>

    <!-- Bottom margin for the "calls" area of the in-call UI
         (which shows either one or two call_info blocks.)
         This margin prevents the "calls" area from overlapping
         with the bottom button cluster. -->
    <dimen name="calls_area_bottom_margin">180dp</dimen>

    <!-- Padding at the left and right edges of the "call banner". -->
    <dimen name="call_banner_side_padding">10dp</dimen>
    <!-- Padding at the top and bottom edges of the "call banner". -->
    <dimen name="call_banner_top_bottom_padding">10dp</dimen>

    <!-- Dimensions for OTA Call Card -->
    <dimen name="otabase_layout_marginTop">30dp</dimen>
    <dimen name="otabase_minHeight">270dp</dimen>
    <dimen name="otaactivate_layout_marginTop">10dp</dimen>
    <dimen name="otalistenprogress_layout_marginTop">5dp</dimen>
    <dimen name="otasuccessfail_layout_marginTop">10dp</dimen>

    <!-- Dimensions for Emergency Dialer -->
    <dimen name="emergency_dialer_digits_height">67dp</dimen>
    <dimen name="dialpad_additional_buttons_height">50dp</dimen>
    <dimen name="dialpad_button_height">50dp</dimen>
</resources>
